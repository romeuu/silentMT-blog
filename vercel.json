{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "redirects": [
    { "source": "/", "destination": "/en" }
  ],
  "builds": [
    {
      "src": "/es/**",
      "use": "@astro/vercel/static",
      "config": {
        "includeStaticFiles": true,
        "rewrite": {
          "404": "/404.astro"
        }
      }
    },
    {
      "src": "/en/**",
      "use": "@astro/vercel/static",
      "config": {
        "includeStaticFiles": true,
        "rewrite": {
          "404": "/404.astro"
        }
      }
    },
    {
      "src": "/**",
      "use": "@astro/vercel/static",
      "config": {
        "includeStaticFiles": true,
        "rewrite": {
          "404": "/404.astro"
        }
      }
    }
  ]
}
