---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<article class="post-preview">
    <a href={post.url}>
    {post.image && <div style="text-align: center;"><img class="post-main__img responsive" loading="lazy" src={post.image} alt={post.alt} /></div>}
    <h1 class="title">{post.title}</h1>
    <time class="publish-date">{post.publishDate}</time>
    <p>{post.description}</p>
    </a>
</article>

<style>
  a {
    text-decoration: none;
  }

  a:hover > .title {
    text-decoration: underline;
  }

.post-main__img {
  width: 100%;
  max-width: 600px;
  height: auto;
  margin-bottom: 1rem;
}

.title,
.author,
.publish-date {
  margin: 0;
}

.publish-date,
.author {
  font-size: 1.25rem;
  color: var(--theme-text-lighter);
}

.title {
  font-size: 2.25rem;
  font-weight: 700;
  color: var(--theme-text);
}

</style>
